.maxTime {
  flex: 1;
  margin: 15px auto -10px;
  color: #999999;
  font-size: 12px;
  text-align: center;
}

.slider {
  width: 666rpx;
  margin: 42rpx auto;
  height: 36rpx;
}

.words {
  height: 130rpx;
  margin: 30rpx auto;
  text-align: center;
}

.words .firstShow {
  font-size: 35rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.words .secondShow {
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999999;
}

.chooseBoard {
  width: 660rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  /* height: 330rpx; */
}

.chooseBoard .cate_item {
  flex: 33%;
  /* width: 220rpx; */
  /* height: 175rpx; */
  text-align: center;
  margin-bottom: 20rpx;
}

.chooseBoard .cate_item .cate_icon {
  height: 130rpx;
}

.chooseBoard .cate_item .cate_icon image {
  width: 120rpx;
  height: 120rpx;
}

.chooseBoard .cate_item .cate_text {
  height: 35rpx;
  line-height: 35rpx;
  font-size: 30rpx;
  font-style: normal;
}

.chooseBoard .cate_item .cate_text_active {
  color: tomato;
}

#modal {
  color: steelblue
}

.holderstyle {
  color: teal;
}

.tips {
  font-size: 25rpx;
  color: black;
}

.startAttention {
  width: 300rpx;
  height: 90rpx;
  border: 2rpx solid #94b5bd;
  border-radius: 20rpx;
  line-height: 90rpx;
  color: #666;
  margin: 30rpx auto;
  text-align: center;
}

.startAttention image,
.pauseBtn image,
.okBtn image,
.continueBtn image,
.cancleBtn image {
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
  padding-bottom: 13rpx;
}

.clock {
  background-image: url('https://636c-cloud1-6g5wybika29da54a-1305336167.tcb.qcloud.la/pictures/bg04.jpg?sign=10c77c2a49726d60183eedaa87cac633&t=1621689680');
  background-size: 750rpx auto;
  background-position: left bottom;
  overflow: hidden;
  background-color: #8bdbec;
  border-top: 2rpx solid #eee;
  box-sizing: border-box;
}

.progress {
  height: 400rpx;
  width: 400rpx;
  margin: 120rpx auto;
  position: relative;
}

.progress .progress_bg,
.progress .progress_active {
  position: absolute;
  left: 0;
  top: 0;
  height: 400rpx;
  width: 400rpx;
}

.progress .progress_text {
  position: absolute;
  left: 120rpx;
  top: 170rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: #ce2c99;
  text-align: center;
}

.btns .okBtn,
.btns .pauseBtn,
.btns .continueBtn,
.btns .cancleBtn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ef83cc;
  border: 4rpx solid #ece3e3;
  border-radius: 20rpx;
  margin: 0 auto 20rpx auto;
}

.okBtn text,
.continueBtn text,
.cancleBtn text {
  box-sizing: border-box;
  margin-right: 10rpx;
}

ad {
  height: auto;
  position: fixed;
  bottom: 0;
}