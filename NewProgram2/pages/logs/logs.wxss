.sum{
  width: 750rpx;
  height: 350rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  border: 10rpx solid #eeeeee;
}
.sum .sum_item{
  width: 375rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  box-sizing: border-box;
}
.sum .sum_item_title{
  font-size: 36rpx;
  color: #000;
}
.sum .sum_item_val{
  height: 40rpx;
  line-height: 40rpx;
  padding: 15rpx 0;
  color: #000;
}
.detail{
  width: 700rpx;
  margin: 0 auto;
}
.detail_title{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
  margin-bottom: 10px;
}
.detail_title .detail_title_text{
  flex: 1;
  font-size: 36rpx;
}
.detail_title .detail_title_text image {
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
  padding-bottom: 13rpx;
}
.detail_title .detail_title_type{
  flex: 1;
  text-align: right;
  /* font-size: 25rpx; */
  font-size: 35rpx;
}
.detail_title .detail_title_type text{
  padding-left: 12rpx;
}
