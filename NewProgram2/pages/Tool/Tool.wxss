.table {
  display: flex;
  flex-direction: column;
}

.chooseBoard{
  flex: 1;
  width: 660rpx;
   display: flex;
 /* flex-wrap: wrap; */
   flex-direction: column;
  margin: 0 auto;
   /* padding: 70rpx 0; */
    box-sizing: border-box;
}
.title{
  display: block;
    line-height: 50rpx;
    border-bottom: 1rpx solid #ccc;
    font-size: 36rpx;
    font-style: normal;
    text-align: center;
    color: #000;
}
.chooseBoard .cate_item{
  display: flex;
  flex: 1;
  flex-direction: row;
   align-items: center;
  /* flex: 50%; */
    width: 100%;
    /* height: 230rpx; */
    text-align: center;
    margin-bottom: 20rpx;
    border-bottom: 1px solid #ccc;
}
.chooseBoard .cate_item:nth-child(2n) {
  flex-direction: row-reverse;
}
